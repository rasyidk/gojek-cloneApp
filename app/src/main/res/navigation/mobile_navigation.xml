<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.gojek_cloneapp.ui.home.HomeFragment"
        android:label="Beranda"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.gojek_cloneapp.ui.promo.promoFragment"
        android:label="Promo"
        tools:layout="@layout/fragment_promo" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.gojek_cloneapp.ui.pesanan.pesananFragment"
        android:label="Pesanan"
        tools:layout="@layout/fragment_pesanan" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.gojek_cloneapp.ui.chat.chatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />
</navigation>